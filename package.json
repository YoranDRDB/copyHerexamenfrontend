{
  "name": "webservices-planning-api",
  "version": "1.0.0",
  "description": "project voor cursus webservices.",
  "main": "index.ts",
  "repository": "git@github.com:HOGENT-frontendweb/webservices-budget.git",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "start:dev": "tsx watch --env-file .env --inspect=0.0.0.0:9001 src/index.ts",
    "start": "node build/src/index.js",
    "build": "tsc",
    "lint": "eslint .",
    "migrate:dev": "prisma migrate dev",
    "migrate:test": "env-cmd -f .env.test prisma migrate dev --skip-seed",
    "test": "env-cmd -f .env.test jest --runInBand",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage",
    "apidoc": "apidoc -i src/rest/ -o apidoc/"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@prisma/client": "^6.1.0",
    "argon2": "^0.41.1",
    "bcrypt": "^5.1.1",
    "config": "^3.3.12",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^8.0.1",
    "prisma": "^6.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/utils": "^8.18.1",
    "apidoc": "^1.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.10.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "prisma": {
    "schema": "src/data/schema.prisma",
    "seed": "tsx ./src/data/seed.ts"
  },
  "engines": {
    "node": "20.6.0",
    "yarn": "4.4.0"
  }
}
